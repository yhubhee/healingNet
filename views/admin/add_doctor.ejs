<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <!-- Add Doctor Form Section Start -->
    <div class="container-fluid py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="bg-white rounded shadow-sm p-5">
                        <h2 class="text-primary mb-4">Add Doctor</h2>
                        <form action="/admin/add-doctor" method="POST">
                            <div class="row g-3">
                                <!-- Upload Picture -->
                                <div class="col-12 text-center mb-4">
                                    <div class="d-flex justify-content-center align-items-center">
                                        <div class="position-relative">
                                            <img src="/img/default-doctor.png" alt="Doctor Picture" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                                            <input type="file" id="doctorPicture" name="doctorPicture" accept="image/*" class="form-control d-none" onchange="previewImage(event)">
                                            <label for="doctorPicture" class="btn btn-outline-primary rounded-pill position-absolute bottom-0 start-50 translate-middle-x">Upload Picture</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Form Fields -->
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control rounded" id="name" name="name" placeholder="Name" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="specialty" class="form-label">Specialty</label>
                                    <select class="form-select rounded" id="specialty" name="specialty" required>
                                        <option value="general-physician">General Physician</option>
                                        <option value="pediatrician">Pediatrician</option>
                                        <option value="cardiologist">Cardiologist</option>
                                        <option value="dermatologist">Dermatologist</option>
                                        <option value="gynecologist">Gynecologist</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Doctor Email</label>
                                    <input type="email" class="form-control rounded" id="email" name="email" placeholder="Email" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="degree" class="form-label">Degree</label>
                                    <input type="text" class="form-control rounded" id="degree" name="degree" placeholder="Degree">
                                </div>
                                <div class="col-md-6">
                                    <label for="password" class="form-label">Set Password</label>
                                    <input type="password" class="form-control rounded" id="password" name="password" placeholder="Password" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="address1" class="form-label">Address 1</label>
                                    <input type="text" class="form-control rounded" id="address1" name="address1" placeholder="Address 1">
                                </div>
                                <div class="col-md-6">
                                    <label for="experience" class="form-label">Experience</label>
                                    <select class="form-select rounded" id="experience" name="experience" required>
                                        <option value="1-year">1 Year</option>
                                        <option value="2-years">2 Years</option>
                                        <option value="3-years">3 Years</option>
                                        <option value="5-years">5+ Years</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="address2" class="form-label">Address 2</label>
                                    <input type="text" class="form-control rounded" id="address2" name="address2" placeholder="Address 2">
                                </div>
                                <div class="col-12">
                                    <label for="fees" class="form-label">Fees</label>
                                    <input type="number" class="form-control rounded" id="fees" name="fees" placeholder="Fees" required>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12 text-center mt-4">
                                    <button type="submit" class="btn btn-primary rounded-pill py-3 px-5">Add Doctor</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Add Doctor Form Section End -->

    <%- include('../partials/footer') %>
    <!-- JavaScript for Image Preview -->
    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function() {
                const output = document.querySelector('img[alt="Doctor Picture"]');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
</body>
</html>