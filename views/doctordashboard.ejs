<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
    <link href="/css/dashboard.css" rel="stylesheet">

    <title>Doctor Dashboard - HealingNet Telemedicine</title>
</head>
<script>
  document.addEventListener("DOMContentLoaded", function () {
  // Save the default content from the main area on page load
  var defaultMainContent = document.querySelector(".main-content").innerHTML;

  document.querySelectorAll(".load-content").forEach(function (link) {
      link.addEventListener("click", function (event) {
          event.preventDefault();
          let url = this.getAttribute("data-url");

          if (url === "/doctordashboard") {
              // Restore the original main content
              document.querySelector(".main-content").innerHTML = defaultMainContent;
          } else {
              // Otherwise, fetch the new content via AJAX
              fetch(url)
                  .then(response => response.text())
                  .then(html => {
                      document.querySelector(".main-content").innerHTML = html;
                  })
                  .catch(error => console.error("Error loading page:", error));
          }
      });
  });
});
</script>

<body>
  <!-- Top Navigation Bar -->
  <div class="container-fluid sticky-top bg-white shadow-sm">
    <div class="container">
      <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0">
        <a class="navbar-brand" href="/">
          <img src="/img/healingnet2.webp" alt="HealingNet Logo" style="height: 50px; margin-right: 10px;">
        </a>
        <!-- Display the title on medium and larger screens -->
        <h1 class="m-0 text-primary d-none d-lg-block">HealingNet</h1>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
          aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item me-3">
              <a class="nav-link" href="#">
                <i class="fas fa-bell"></i> Notifications
              </a>
            </li>
            <li class="nav-item dropdown signup-dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                <img src="/img/avatar.jpg" alt="Profile" class="rounded-circle" width="30" height="30">
                <%= firstname %>
                  <%= lastname %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                <li><a class="dropdown-item" href="/profile">My Profile</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                <li>
                  <button id="sidebarToggle" class="dropdown-item">More Options</button>
                </li>
                <div id="sidebarContent" class="d-none">
                  <li>
                    <a class="dropdown-item" aria-current="page" href="#">
                      <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/booked-appointment">
                      <i class="fas fa-calendar-check"></i> Appointments
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="fas fa-notes-medical"></i> Medical Records
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="fas fa-prescription-bottle-alt"></i> Prescriptions
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="fas fa-wallet"></i> Billing
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="fas fa-cogs"></i> Settings
                    </a>
                  </li>
                </div>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
      <!-- Navbar End -->
    </div>
  </div>

  <!-- Dashboard Container -->
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar Navigation -->
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active load-content" aria-current="page" href="#" data-url="/doctordashboard">
                <i class="fas fa-tachometer-alt"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link load-content" href="#" data-url="/doctorappointment">
                <i class="fas fa-calendar-check"></i> Appointments
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-user-injured"></i> Patients
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-notes-medical"></i> Medical Records
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-clock"></i> Schedule
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-comments"></i> Messages
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-cogs"></i> Settings
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Dashboard Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 main-content">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
          <h1 class="h2">Doctor Dashboard</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button class="btn btn-sm btn-outline-secondary">Share</button>
              <button class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
              <i class="fas fa-calendar"></i> This Week
            </button>
          </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="row">
          <!-- Today's Appointments Card -->
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-header">Today's Appointments</div>
              <div class="card-body">
                <p class="card-text">You have 3 appointments scheduled for today.</p>
                <a href="#" class="btn btn-primary btn-sm">View Schedule</a>
              </div>
            </div>
          </div>

          <!-- Upcoming Appointments Card -->
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-header">Upcoming Appointments</div>
              <div class="card-body">
                <p class="card-text">Your next appointment is in 2 days.</p>
                <a href="#" class="btn btn-secondary btn-sm">View Details</a>
              </div>
            </div>
          </div>

          <!-- Patient Requests Card -->
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-header">Patient Requests</div>
              <div class="card-body">
                <p class="card-text">There are 2 new consultation requests.</p>
                <a href="#" class="btn btn-info btn-sm text-white">Review Requests</a>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <!-- Patient List Card -->
          <div class="col-md-6 col-lg-6 mb-4">
            <div class="card shadow-sm">
              <div class="card-header">Patient List</div>
              <div class="card-body">
                <p class="card-text">You are currently managing 25 patients.</p>
                <a href="#" class="btn btn-warning btn-sm">View All Patients</a>
              </div>
            </div>
          </div>

          <!-- Messages Card -->
          <div class="col-md-6 col-lg-6 mb-4">
            <div class="card shadow-sm">
              <div class="card-header">Messages</div>
              <div class="card-body">
                <p class="card-text">You have 5 unread messages.</p>
                <a href="#" class="btn btn-success btn-sm">Check Inbox</a>
              </div>
            </div>
          </div>
        </div>

      </main>
    </div>
  </div>
  <div class="card-body">
    <!-- Add table or list to display appointments -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Email</th>
                <th>Illness</th>
                <th>Date</th>
                <th>Time</th>
            </tr>
        </thead>

        <tbody>
            <!-- Loop through appointments and display them here -->
            <% if (appointments.length > 0) { %>
                <% appointments.forEach(appointment => { %>
                    <tr>
                        <td><%= appointment.patient_name %></td>
                        <td><%= appointment.email %></td>
                        <td><%= appointment.illness %></td>
                        <td><%= appointment.appointment_date %></td>
                        <td><%= appointment.appointment_time %></td>
                        
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">No appointments found</td>
                </tr>
            <% } %>
        </tbody>
       
        
    </table>
</div>
  <!-- JavaScript Libraries -->
  <%- include('partials/footer') %>
    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>

