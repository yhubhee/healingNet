<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Login</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->
  <style>
    .error-message,
    .success-message {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 10000;
      max-width: 300px;
      padding: 10px;
      border-radius: 5px;
      font-weight: bold;
    }
    .error-message {
      background-color: #f8d7da;
      border: 1px solid #f5c2c7;
      color: #842029;
    }
    .success-message {
      background-color: #d1e7dd;
      border: 1px solid #badbcc;
      color: #0f5132;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <% if (typeof error !== 'undefined') { %>
    <div class="message error-message">
      <%= error %>
    </div>
  <% } %>
  <% if (typeof success !== 'undefined') { %>
    <div class="message success-message">
      <%= success %>
    </div>
  <% } %>
  <% if (typeof redirect !=='undefined' && redirect) { %>
    <script>
      setTimeout(() => {
        window.location.href = '/doctordashboard';
      }, 1000); // Redirect after 3 seconds
    </script>
  <% } %>

   <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 animate__animated animate__fadeInDown" style="max-width: 400px; width: 100%;">
      <h3 class="text-center text-primary mb-4">Welcome Back</h3>
      <form action="/auth/doctorlogin" method="POST">
        <!-- Email -->
        <div class="form-group mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <!-- Password -->
        <div class="form-group mb-3 position-relative">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password"
              placeholder="Enter your password" required > <i class="fa-solid fa-eye-slash showpass"
              id="password-icon"></i>
      </div>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Login</button>
        <!-- Sign Up Redirect -->
        <p class="text-center mt-3">
          Login as a Patient <a href="/login" class="text-primary"> Login </a> <br>
          Don't have an account? <a href="/doctorsignup" class="text-primary">Sign Up</a>
        </p>
      </form>
    </div>
  </div>
  
  <!-- Animate.css -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
  <!-- Custom JavaScript -->
   <script src="/js/login.js"> </script>
  <script src="/js/main.js"> </script>
</body>
</html>
