<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet">
    <title>Doctor Login - HealingNet Telemedicine</title>
  </head>
  
  <body>
    <!-- Alert Messages (Top-Right) -->
    <div class="alert-container">
      <% if (typeof error !=='undefined') { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <% if (typeof success !=='undefined') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>
    <% if (typeof redirect !== 'undefined' && redirect) { %>
      <script>
        setTimeout(() => {
          window.location.href = '/doctordashboard';
        }, 1000); // Redirect after 1 second
      </script>
    <% } %>

    <!-- Login Form -->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-4">
          <div class="card login-card">
            <div class="login-header"  style="background-color:  #13C5DD !important;">
              <h3 class="mb-0">Doctor Login</h3>
            </div>
            <div class="card-body">
              <form action="/auth/doctorlogin" method="POST">
                <div class="mb-3">
                  <label for="email" class="form-label">Email Address</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="mb-3 password-container">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                  <i class="fa-solid fa-eye-slash showpass " id="password-icon"></i>
                </div>
                <button type="submit" class="btn btn-primary w-100" style="background-color:#13C5DD !important;">Log In</button>
              </form>
              <p class="text-center mt-3">
                Forgot Password ? <a href="/Doc_forgot_pass" class="text-primary">Password Reset</a> <br>
                Don't have an account? <a href="/doctorsignup" class="text-primary">Sign Up</a> <br>
                Login as Patient <a href="/login" class="text-primary">log in</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/login.js"> </script>
  </body>
</html>
