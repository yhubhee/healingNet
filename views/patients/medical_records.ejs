<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Book Appointment - HealingNet</title>
</head>

<body>
    <div class="container-fluid py-4" data-aos="fade-in">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="text-primary mb-0">My Medical Records</h2>
      <div>
        <button class="btn btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#filterModal">Filter</button>
        <a href="#" class="btn btn-dark">Download All</a>
      </div>
    </div>

    <!-- Filter Modal -->
    <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="filterModalLabel">Filter Records</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3">
                <label for="fromDate" class="form-label">From</label>
                <input type="date" class="form-control" id="fromDate">
              </div>
              <div class="mb-3">
                <label for="toDate" class="form-label">To</label>
                <input type="date" class="form-control" id="toDate">
              </div>
              <div class="mb-3">
                <label for="recordType" class="form-label">Record Type</label>
                <select id="recordType" class="form-select">
                  <option value="">All</option>
                  <option value="consultation">Consultation</option>
                  <option value="lab">Lab Results</option>
                  <option value="imaging">Imaging</option>
                  <option value="referral">Referral</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">Apply Filters</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Medical Records Table -->
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Date</th>
                <th>Type</th>
                <th>Provider</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>2025-07-01</td>
                <td>Consultation</td>
                <td>Dr. Chika Okafor</td>
                <td>Follow-up for hypertension</td>
                <td>
                  <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="#" class="btn btn-sm btn-outline-secondary">Download</a>
                </td>
              </tr>
              <tr>
                <td>2</td>
                <td>2025-06-15</td>
                <td>Lab Result</td>
                <td>MedLab Diagnostics</td>
                <td>Fasting blood sugar report</td>
                <td>
                  <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="#" class="btn btn-sm btn-outline-secondary">Download</a>
                </td>
              </tr>
              <!-- Add more dynamically -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</body>