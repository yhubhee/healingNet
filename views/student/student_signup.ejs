<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Student Signup - HealingNet</title>
</head>

<body>
    <!-- Alert Messages (Top-Right) -->
    <div class="alert-container">
        <% if (typeof error !=='undefined' ) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if (typeof success !=='undefined' ) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
    </div>
    <% if (typeof redirect !=='undefined' && redirect) { %>
        <script>
            setTimeout(() => {
                window.location.href = '/login';
            }, 1000); // Redirect after 3 seconds
        </script>
        <% } %>

  <section class="py-5">
    <div class="container">
      <div class="row shadow-lg bg-white rounded overflow-hidden">

        <!-- Image -->
        <div class="col-lg-6 d-none d-lg-block">
          <img src="/img/how_it_works.png" alt="Student Signup" class="img-fluid h-100 w-100" style="object-fit: cover;">
        </div>

        <!-- Signup Form -->
        <div class="col-lg-6 p-5">
          <h2 class="text-center text-uppercase border-bottom border-3 border-primary pb-2 mb-4">Student Signup</h2>
          <form action="/auth/student_signup" method="POST" id="studentSignupForm">
            <div class="mb-3">
              <label for="first_name" class="form-label">First Name</label>
              <input type="text" class="form-control" id="first_name" name="first_name" required>
            </div>
            <div class="mb-3">
              <label for="last_name" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="last_name" name="last_name" required>
            </div>
            <div class="mb-3">
              <label for="dob" class="form-label">Date of Birth</label>
              <input type="date" class="form-control" id="dob" name="dob" required>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" placeholder="e.g. 08012345678" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-4 position-relative">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
              <i class="fa-solid fa-eye-slash position-absolute" id="password-icon" style="top: 38px; right: 15px; cursor: pointer;"></i>
            </div>
            <div class="mb-3">
                <label for="institution" class="form-label">Institution Name</label>
                <input type="text" class="form-control" id="institution" name="institution" required>
              </div>
              <div class="mb-3">
                <label for="student_id_card" class="form-label">Upload Student ID Card or Admi</label>
                <input type="file" class="form-control" id="student_id_card" name="student_id_card" accept="image/*,.pdf" required>
                <div class="form-text">Accepted formats: JPG, PNG, or PDF</div>
              </div>
              
            <div class="d-grid">
              <button type="submit" class="btn btn-primary rounded-pill">Sign Up</button>
            </div>
            <p class="text-center mt-3">
                Already have an account? <a href="/studen/student_login" class="text-primary">Log in as a Student</a>
                <br>
            </p>
          </form>
        </div>

      </div>
    </div>
  </section>
  <%- include('../partials/footer') %>

</body>
</html>
