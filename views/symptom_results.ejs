<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Symptom Results - HealingNet</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        /* body { background-color: #f0f0f0; font-family: Arial, sans-serif; } */
        .results-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            background-color: #13C5DD; 
            color: black;
            padding: 10px;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            margin: -20px -20px 20px -20px; /* Adjust to fit container */
        }
        .table-responsive { margin-bottom: 20px; }
        .btn-primary { background-color: #007bff; border-color: #0056b3; }
        .btn-primary:hover { background-color: #0056b3; }
        .back-btn { margin-left: 10px; }
    </style>
</head>
<body>
    <div class="results-container">
        <div class="form-header">Symptom Checker Results</div>
        <div class="p-4">
            <h3 class="mb-4">Hello, <%= firstname %> <%= lastname %></h3>
            <p class="lead mb-4"><strong>Your Reported Symptoms:</strong> <%= userSymptoms.join(', ') %></p>

            <% if (possibleDiseases.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Department</th>
                                <th>Disease</th>
                                <th>Matched Symptoms</th>
                                <th>Match Percentage</th>
                                <th>Next Steps</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% possibleDiseases.forEach(result => { %>
                                <tr>
                                    <td><%= result.department %></td>
                                    <td><%= result.disease %></td>
                                    <td><%= result.matchedSymptoms.join(', ') %></td>
                                    <td><%= result.matchPercentage %>%</td>
                                    <td><%= result.telemedicine_context || 'No specific guidance available.' %></td>
                                    <td>
                                        <a href="/appointment?department=<%= encodeURIComponent(result.department) %>&disease=<%= encodeURIComponent(result.disease) %>" class="btn btn-primary btn-sm">Book</a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info" role="alert">
                    No matches found based on your symptoms. Consider consulting a General Practitioner for a thorough evaluation.
                </div>
                <a href="/book-appointment?department=Primary%20Care" class="btn btn-primary btn-sm">Book with GP</a>
            <% } %>

            <div class="mt-4">
                <a href="/symptom_checker" class="btn btn-secondary">Try Again</a>
                <a href="/dashboard" class="btn btn-secondary back-btn">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>