                            <%- include('../partials/about-p') %>

                                <div class="row g-3 pt-3">
                                    <div class="col-sm-3 col-6" data-aos="fade-right" data-aos-delay="100">
                                        <div class="specialty-card bg-light text-center rounded-circle py-4">
