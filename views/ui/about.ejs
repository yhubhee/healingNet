            <!-- Specialties Section Start -->
            <div class="container-fluid py-5 bg-light" data-aos="fade-in">
                <div class="container">
                    <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                        <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5" data-aos="fade-up"
                            data-aos-delay="100">Our Specialties</h5>
                        <h1 class="display-4" data-aos="fade-up" data-aos-delay="200">Comprehensive Healthcare Services
                        </h1>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-3 col-md-6" data-aos="zoom-in" data-aos-delay="300">
                            <div class="specialty-card bg-white rounded shadow-sm p-4 h-100 text-center">
                                <div class="mb-3">
