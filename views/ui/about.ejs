                <div class="container">
                    <div class="row align-items-center gx-5 my-5">
                        
                        <!-- Image Column -->
                        <div class="col-lg-5 mb-4 mb-lg-0" data-aos="zoom-in" data-aos-delay="100">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <img src="/img/video-consulting.jpg"
