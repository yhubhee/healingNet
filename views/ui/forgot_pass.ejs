<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <title>Forgot Password | HealingNet</title>
</head>

<body class="bg-light" style="font-family: 'Roboto', sans-serif;">

  <!-- Alert Messages -->
  <div class="alert-container">
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <% if (typeof redirect !== 'undefined' && redirect) { %>
    <script>
      setTimeout(() => {
        window.location.href = '/ui/reset_pass';
      }, 1000);
    </script>
  <% } %>

  <!-- Forgot Password Form -->
  <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-md-5">
      <div class="card shadow-sm border-0">
        <div class="card-header text-white text-center" style="background-color: #13C5DD;">
          <h4 class="mb-0">Reset Your Password</h4>
        </div>
        <div class="card-body">
          <form action="/auth/forgot_pass" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <button type="submit" class="btn w-100 text-white" style="background-color: #13C5DD;">Send Reset Link</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>

</html>
